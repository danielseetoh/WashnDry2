<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    style="@style/dialogWrapperStyle">
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="No Good Drying Times?"
        android:textSize="25dp"
        android:textColor="#6acccb"
        android:paddingTop="4dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:gravity="center" />
    <TextView
        android:id="@+id/titleLogin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="It appears that you are either busy or the weather conditions are bad for the next few days."
        android:textSize="15dp"
        android:textColor="#000000"
        android:paddingTop="4dp"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/titleLogin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Would you like to try an on-demand laundry service?"
        android:textSize="20dp"
        android:textColor="#000000"
        android:paddingTop="4dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20px"
        android:gravity="center">
        <Button
            style="@style/greenButtonStyle"
            android:id="@+id/cancel"
            android:layout_width="125dp"
            android:text="No thanks"
            android:textColor="#ffffffff" />
        <Button
            style="@style/greenButtonStyle"
            android:id="@+id/submit"
            android:layout_width="125dp"
            android:text="Yes!"
            android:textColor="#ffffffff" />
    </LinearLayout>
</LinearLayout>