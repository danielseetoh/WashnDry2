<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
  </style>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>  
  </style>

	<style name="WashNDryTheme" parent="@android:style/Theme.Material.Light">
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowActionBar">true</item>
    	<item name="android:colorPrimary">#ffffff</item>
		<item name="android:colorAccent">#dddddd</item>
		<item name="android:actionBarSize">24dp</item>
  	</style>

	<style name="greenButtonStyle">
    	<item name="android:layout_width" >match_parent</item>
		<item name="android:layout_height" >wrap_content</item>
		<item name="android:background">@drawable/buttonBgGreen</item>
	    <item name="android:textColor" >@drawable/textColor</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:layout_margin" >3dp</item>
		<item name="android:layout_marginTop">20px</item>
		<item name="android:layout_marginBottom">20px</item>
	    <item name="android:textSize" >15dp</item>
		<item name="android:textStyle" >bold</item>
		<item name="android:gravity" >center</item>
	</style>

	<style name="drawerStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:activatedBackgroundIndicator">@color/OrangeLight</item>
    </style>

	<style name="textFieldStyle">
		<item name="android:minHeight">25px</item>
		<item name="android:background">@drawable/bg_textField</item>
		<item name="android:paddingTop">20px</item>
		<item name="android:paddingBottom">20px</item>
		<item name="android:paddingLeft">30px</item>
		<item name="android:paddingRight">30px</item>
		<item name="android:textSize">50px</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColorHint" >@drawable/textColor</item>
		<item name="android:layout_marginTop">10px</item>
		<item name="android:layout_marginBottom">10px</item>
    </style>

<!--    Rating text style-->
	<style name="ratingTextStyle">
		<item name="android:id">@+id/rate</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">15dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor" >#000000</item>
    </style>

<!--    overall page wrapper-->

	<style name="overallPageWrapperStyle">
        <item name="android:orientation">vertical</item>
		<item name="android:background">#f3f3f3</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:id">@+id/overallPageWrapper</item>
    </style>
	
<!--	Page wrapper-->
	<style name="pageWrapperStyle">
        <item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">80px</item>
		<item name="android:paddingRight">80px</item>
		<item name="android:weightSum">100</item>
		<item name="android:background">#f3f3f3</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:id">@+id/pageWrapper</item>
    </style>

<!--	Dialog Wrapper-->
	<style name="dialogWrapperStyle">
		<item name="android:background">@drawable/bg_dialogWrapper</item>
        <item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">20px</item>
		<item name="android:paddingRight">20px</item>
		<item name="android:paddingTop">80px</item>
		<item name="android:paddingBottom">80px</item>
		<item name="android:weightSum">100</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">80px</item>
		<item name="android:layout_marginRight">80px</item>
		<item name="android:id">@+id/pageWrapper</item>
    </style>
	

<!--    Page Scroll View-->
	<style name="scrollWrapperStyle">
        <item name="android:orientation">vertical</item>
		<item name="android:fillViewport">true</item>
		<item name="android:minHeight">25px</item>
		<item name="android:background">#f3f3f3</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:id">@+id/scrollView1</item>
    </style>

<!--	List View style-->

	<style name="timingListViewStyle">
        <item name="android:orientation">vertical</item>
		<item name="android:fillViewport">true</item>
		<item name="android:minHeight">25px</item>
		<item name="android:background">#FFFFFF</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">200px</item>
		<item name="android:textAlignment">gravity</item>
		<item name="android:layout_gravity">top</item>
		<item name="android:layout_marginTop">10px</item>
		<item name="android:layout_marginBottom">50px</item>
		<item name="android:id">@+id/laundryTime_ListView</item>
    </style>

<!--Text View Style for Weather Data-->

	<style name="weatherDataStyle">
		<item name="android:textColor">#777777</item>
	</style>

<!--Text View Style-->

	<style name="textStyle">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textStyle">bold</item>
	</style>

<!--	Header Text view style-->
	<style name="pageHeaderStyle">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textColor">#757575</item>
		<item name="android:textSize">30dp</item>
		<item name="android:background">#f3f3f3</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:id">@+id/pageHeader</item>
	</style>

	<style name="greenSubHeaderStyle">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#6acccb</item>
		<item name="android:textSize">20dp</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_marginBottom">20dp</item>
		<item name="android:id">@+id/greenSubHeader</item>
	</style>
	
</resources>